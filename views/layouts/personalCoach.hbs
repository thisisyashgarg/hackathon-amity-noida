      <!-- Page Topic -->
      <section id="personalisedMessage">
        <div class="content justify-center text-center pt-10 mt-10">
          <h1
            class="font-extrabold text-transparent text-5xl bg-clip-text bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500"
          >
            Personal Coach
          </h1>
          <p class="text-xl text-white pt-6 max-w-sm mx-auto">
            Enter your age, sport, purpose of personal coach and get your
            personalised coaching
          </p>
        </div>
      </section>

      <section id="getAnswer">
        <!-- flex-row division -->
        <div class="flex flex-row mt-24 space-x-32 justify-center">
          <!-- form -->
          <div class="text-white" style="">

            <form method="post" action="/personalCoach" class="leading-10">
              <label for="age" class="block mb-2 text-white">Age</label>
              <input
                style="padding: 5px;"
                type="number"
                min="5"
                max="80"
                name="age"
                required
                class="bg-transparent text-white rounded-lg w-96"
                style="border-color: 2px solid grey;"
                value="{{age}}"
              />

              <label
                for="sport"
                class="block mb-2 text-white pt-2"
              >Sport</label>
              <input
                style="padding: 5px;"
                placeholder="e.g Football, Cricket"
                type="text"
                id="replyToMessage1"
                name="sport"
                required
                class="bg-transparent text-white rounded-lg w-96"
                value="{{sport}}"
              />

              <label for="purpose" class="block mb-2 text-white">Purpose of
                Coaching</label>
              <input
                style="padding: 5px;"
                placeholder="e.g Cricket match"
                type="text"
                id="replyToMessage2"
                name="purpose"
                required
                class="bg-transparent text-white rounded-lg w-96"
                value="{{purpose}}"
              />

              <label for="match" class="block mb-2 text-white">If the purpose is
                match of any sport, enter the remaining days
              </label>
              <input
                style="padding: 5px;"
                placeholder="e.g 20 days"
                min="1"
                max="365"
                type="number"
                id=""
                name="match"
                class="bg-transparent text-white rounded-lg w-96"
                value="{{match}}"
              />

              <br />

              <button
                type="submit"
                class="buttons bg-transparent text-white text-cyan-300 pl-16 pt-7 text-2xl"
              >Generate â†’</button>
            </form>

          </div>
          <div id="diet-chart">
            <label
              for=""
              style="font-size: 1.5rem; font-weight:large; color: white"
            >{{label}}</label><br />
            <textarea
              style="padding: 5px;"
              placeholder="Your plan will appear here"
              name=""
              cols="50"
              rows="15"
              class="bg-transparent text-white rounded-lg"
            >{{data}}</textarea>
            {{! <button id="download-as-pdf">Download as PDF</button> }}
          </div>

        </div>
      </section>
